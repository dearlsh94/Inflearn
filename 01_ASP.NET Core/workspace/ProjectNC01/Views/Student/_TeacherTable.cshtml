@model StudentTeacherViewModel

<div class="text-center">
    <h1 class="display-4">Our Teachers</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Class</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var teacher in Model.Teachers)
            {
                <tr>
                    <td>@teacher.Name</td>
                    <td>@teacher.Class</td>
                </tr>
            }
        </tbody>
    </table>
</div>