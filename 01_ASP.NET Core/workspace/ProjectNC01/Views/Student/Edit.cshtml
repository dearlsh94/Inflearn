@model StudentModel

@{
    ViewData["Title"] = "Student Edit";
}

<div class="text-center">
    <h1 class="display-4">Student Edit</h1>
    <!-- <form class="form form-horizontal" asp-antiforgery="false" method="POST"> : POST Token 생성 사용 안함.-->
    <form class="form form-horizontal" method="POST">
        <div class="form-group">
            <div class="col-md-3">
                <label>ID : </label>
                <input type="text" class="form-control" asp-for="@Model.Id" disabled>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <label>Name : </label>
                <input type="text" class="form-control" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <label>Age : </label>
                <input type="text" class="form-control" asp-for="@Model.Age">
                <span asp-validation-for="@Model.Age"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <label>Country : </label>
                <input type="text" class="form-control" asp-for="@Model.Country">
                <span asp-validation-for="@Model.Country"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Update</button>
    </form>
</div>